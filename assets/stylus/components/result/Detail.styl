@import "@/assets/stylus/variables.styl"
.result-detail
  .clip-dialog
    z-index 10000
    position absolute
    top 0
    left 0
    width 100%
    box-sizing border-box
    .v-card#clip-form
      width 400px
      height 100%
      margin auto
      .v-card__text
        padding 20px 21px
      .label
        font-size 10px
        color #41434E
      #clip-create-new-folder, #clip-select-destination-folder
        width 100%
        display inline-flex
        .switch-selection
          color #43A5C4
          font-size 14px
          width fit-content
          align-self center
          cursor pointer
        >>>.v-select.v-select-folder, .v-input.v-input-folder 
          width 242px
          margin-right 16px
          .v-input__slot
            padding-right 0
      >>>.v-text-field > .v-input__control > .v-input__slot
        box-shadow none
        height 36px
        border-radius 8px
      >>>.v-btn
        box-shadow none
        .v-btn__content
          font-weight 400
  .bg-color
    background-color whitesmoke
  .v-sheet
    /* top 0.5em !important */
  .tab-color
    border-top-left-radius 10px
    border-top-right-radius 10px
    max-height 2em
  .link-color
    color #43a5c4 !important
  .resize-box
    width 44px
    text-align center
  .resize-btn
    width 20px
  .v-tabs--align-with-title
    > .v-tabs-bar:not(.v-tabs-bar--show-arrows):not(.v-slide-group--is-overflowing)
      > .v-slide-group__wrapper > .v-tabs-bar__content
        > .v-tabs-slider-wrapper
          + .v-tab
            margin-left 0
          + .v-tab--active
            font-weight 700
  >>> .v-tab
    max-width unset
  .result-item-tab
    width 200px
    border-top-left-radius 10px
    border-top-right-radius 10px
    padding 0 10px
    overflow hidden
    background-color whitesmoke
    margin-top 8px
    &.tab-active
      background #fff
      left 0
      border 0
      margin 0
      margin-top 8px
      //pointer-events none
    .content-tab
      width 160px
      cursor pointer
      .v-image
        margin-right 8px
      span
        width 132px
  .close-all-tab
    border-top-left-radius 10px
    border-top-right-radius 10px
    padding 0 8px
    overflow hidden
    background-color whitesmoke
    left 0
    border 0
    margin-top 10px
    margin-bottom 2px
    .content-tab
      cursor pointer
      border 1px solid #43A5C4
      border-radius 4px
      background #fff
      padding-right 10px
      .v-icon
        margin 6px
      span
        color #43A5C4
        font-size 12px
  .v-tabs
    position relative
    border-bottom: 1px solid currentColor
    .v-tabs-slider
      height 4px
      margin-top -2px
    .tab-action
      width 30px
      height 30px
      margin-right 20px !important
    > .v-tabs-bar .v-tab:not(.v-tab--active)
      color #43A5C4
.tabs
  box-sizing border-box
  position relative
  overflow hidden
  .tab-background
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    overflow hidden
    pointer-events none

.bounce-enter-active
  animation bounceIn 0.2s;

.bounce-leave-active
  animation bounceIn 0.2s reverse;

@keyframes bounceIn
  0%
    transform scale(0.9);
    opacity 0;
  60%
    transform scale(1.1);
    opacity 1;
  100% transform scale(1);

