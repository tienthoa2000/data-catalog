#lineage-container
  width 100%
  height calc(100vh - 84px)
  position relative
  .expand-nav
    z-index 10
    position absolute
    top 0
    left 0
    cursor pointer
  .actions
    z-index 10
    position absolute
    top 8px
    right 0
    display flex
    align-items center
    justify-content flex-end
    .group
      margin-right 8px
      display flex
      align-items center
      background rgba(255,255,255,.9)
      box-shadow 0px 2px 4px #00000033
      border-radius 3px
      height 36px
      color rgb(67,165,196)
      &.filter
        padding 3px 12px 3px 9px
      &.search
        padding 3px 12px
      &.zoom
        padding 3px 6px 3px 2px
      .search-icon
        margin-right 8px
      label
        font-size 12px
      .input-box
        display flex
        align-items center
        background #F7F7F7
        border-radius 4px
        width 180px
        padding 4px 4px
        height 28px
        input
          font-size 14px
          width 85%
          &:focus
            outline none
      .action-btn
        cursor pointer
      .v-input
        margin-top 0
        padding-top 0
      .v-divider
        height 15px !important
        margin-top 0
      .zoom-divider
        margin-right 6px
        margin-left 2px
        border-top 7px solid #fff
        border-bottom 7px solid #fff
      .zoom-value-text
        margin-right 4px
        margin-left 4px
        font-size 12px
        line-height 16px
        font-weight normal
  .detail-panel
    position absolute
    width 100%
    bottom 0
    right 0
    background #fff
    z-index 9
    box-shadow -4px 0px 14px #00000033
    --webkit-box-shadow -4px 0px 14px #00000033
    --moz-box-shadow -4px 0px 14px #00000033
    .head
      background #F0F0F0
      display flex
      align-items center
      padding 8px 10px 8px 20px
      font-size 14px
  #lineage-konva
    background #F5F5F5
    width 100%
    height calc(100vh - 84px)
    position relative
    overflow auto
    z-index 1
  .left-nav
    width 256px
    min-width 256px
    max-width 600px
    z-index 11
    background transparent
    position absolute
    top 0
    height 100%
    //background transparent
    //>>> .v-navigation-drawer__content
    //  overflow-y hidden!important
    //>>> .v-navigation-drawer__border
    //  width 0!important
    transition display 1s ease-out
    .main-nav
      position relative
      width 90%
      height 100%
      background #fff
      overflow hidden
      padding 0
      box-shadow 0 0 10px #00000033
      user-select none
      .v-subheader
        font-size 12px
        color #41434E
        background #f5f5f5
        height 36px
        padding-left 20px
        user-select none
      .pine-line-nav
        height calc(40% - 36px)
        overflow-x hidden
        overflow-y auto
        .pine-line-item
          font-size 12px
          color #43A5C4 !important
          min-height 0 !important
          height 28px !important
          margin 8px 0 7px 16px
          border-bottom-left-radius: 16px;
          border-top-left-radius: 16px;
          padding 0 16px
          user-select none
          &.active
            background #E6F6FA
          &:hover
            background #E6F6FA
          &:before
            background none
      .location-list
        height calc(60% - 36px)
        padding-bottom 28px
        padding-top 8px
        overflow-x hidden
        overflow-y auto
        .location-item
          color #41434E
          font-weight bold
          font-size 12px
          min-height 0 !important
          height 18px
          margin-top 0
          padding-left: 20px
          padding-bottom 8px
          user-select none
          span
            position: absolute;
            top: 4px;
            background: #fff;
            padding: 4px 0;
            z-index: 1;
          ul
            padding-left 23px !important
        ul, li
          list-style none
          margin 0
          padding 0
        ul
          padding-left 28px !important
          height unset !important
          margin-top 0 !important
          font-weight normal !important
          li
            &:last-child
              ul
                border-left 4px solid white
                margin-left -15px
        li
          padding-left 13px
          border 1px dotted black
          border-width 0 0 1px 1px
          user-select none
          &.parent-li
            border-bottom 0
          .title-li
            display flex
            margin 0
            background white
            position relative
            top 1.1em
            color #41434E
            font-size 12px
            cursor pointer
            p
              margin 0
              padding-top 3px
              padding-left 3px
              z-index 10
            &:hover::before
              content ''
              background rgba(200,246,250,0.4)
              width 500px
              height 100%
              position absolute
              left -100px
          .title-li.second-level
            top 0.6rem
          .title-li.selected
            &::before
              content ''
              background rgba(200,246,250,0.4)
              width 500px
              height 100%
              position absolute
              left -100px
          .child-li
            .item
              width 100%
              display flex
              margin 0
              background white
              position relative
              top 1.1em
              color #41434E
              font-size 12px
              cursor pointer
              white-space nowrap
              text-overflow: ellipsis;
              user-select none
              &:hover::before
                content ''
                background rgba(84, 172, 200, .2)
                width 500px
                height 100%
                position absolute
                left -100px
              p
                margin 0
                padding-top 2px
                overflow hidden
                text-overflow ellipsis
                white-space nowrap
                padding-right 16px
                z-index 10

            .item.selected
              &::before
                content ''
                background rgba(84, 172, 200, .2)
                width 500px
                height 100%
                position absolute
                left -100px
          ul
            border-top 1px dotted black
            margin-left -12px
            padding-left 24px

    .shrink-nav
      width: 10%;
      background: transparent;
      z-index: 13;
      cursor: pointer;
      position: absolute;
      top: 0;
      right: 0px;
  .resizer-right
    z-index 10
    width 8px
    height 100%
    background transparent
    position absolute
    right 0
    bottom 0
    cursor e-resize
  .toolbar-bottom
    z-index 13
