@import "@/assets/stylus/variables.styl"

.detail-tab-content
  padding 20px
  color #505050
  .row
    .min-width-120
      min-width 120px
    p
      margin-bottom 0
    .label
      font-size 12px
      color: #777777
      margin-bottom 5px
    .value
      font-size 12px
      color: #41434E
      white-space nowrap
      max-width 100%
      overflow hidden
      text-overflow ellipsis
    a.value
      display flex
      text-decoration none
      color currentColor
      img
        margin-top 3px
    .tags-list
      display flex
      .tag-item
        margin-right 8px
        max-width 120px
        div
          font-size 12px
          padding 5px 12px
          border-radius 15px
          background rgba(98, 187, 70, .3)
          color #41434E

    .edit-btn
      min-width 0
      width 30px
      height 30px
      background #FCFCFC
      padding 12px
    .table-container
      background #EAF0F2
      padding 12px
      border-radius 5px
      .table-content
        background #FCFCFC
        min-height calc(100vh - 420px)



