{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "@libs/*": ["../libs/*"]
    },
    "typeRoots": ["../libs/types"],
    "types": [
      "@types/node",
      "@nuxt/types",
      "@nuxtjs/axios",
      // "@types/jest",
      "@pinia/nuxt",
      "node"
    ]
  },
  "files": ["shims-vue.d.ts"],
  "include": [
    "components/**/*",
    "layouts/**/*",
    "middleware/**/*",
    "pages/**/*",
    "plugins/**/*",
    "store/**/*",
    "utils/**/*",
    "functions/**/*"
  ],
  "exclude": ["node_modules", ".nuxt", "dist"]
}
